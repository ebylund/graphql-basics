{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "build/src",
    "preserveConstEnums": true
  },
  "include": ["src/**/*" ]
}